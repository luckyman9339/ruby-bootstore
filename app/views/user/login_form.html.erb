<%= form_tag user_login_path, method: :post do %>
    <div class="field">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </div>

    <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <div class="actions">
        <%= submit_tag 'Log In' %>
    </div>
<% end %>