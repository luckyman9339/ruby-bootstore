<%= form_for(@user, url: user_create_path) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  
    <div class="field">
      <%= f.label :role %>
      <%= f.select :user_role, [['User', 'user'], ['Seller', 'seller']] %>
    </div>  
      
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  