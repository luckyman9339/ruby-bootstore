<%= form_for(@book, url: book_create_path) do |f| %>
    <div class="field">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>
    
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :genre %>
      <%= f.text_field :genre %>
    </div>

    <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div class="field">
        <%= f.label :cover_image %>
        <%= f.text_field :cover_image %>
    </div>
      
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  
